{% set height = width * media.height / media.width %}
<video
    id="video-{{ media.id }}"
    class="sonata-media-video"
    {% if options.controls is defined and options.controls %}
    controls
    {% endif %}
    {% if options.autoplay is defined and options.autoplay %}
        autoplay
    {% endif %}
    {% if options.loop is defined and options.loop %}
        loop
    {% endif %}
    {% if options.muted is defined and options.muted %}
        muted
    {% endif %}
    preload="auto"
    width="{{ width }}"
    height="{{ height }}"
    poster="/uploads/media/{{ options.thumbnail }}" data-setup="{}">

    {% if media.providerMetadata.mp4_available is defined %}
        <source src="{{ options.video_mp4 }}" type="video/mp4">
    {% endif %}
    {% if media.providerMetadata.ogg_available is defined %}
        <source src="{{ options.video_ogg }}" type="video/ogg">
    {% endif %}
    {% if media.providerMetadata.webm_available is defined %}
        <source src="{{ options.video_webm }}" type="video/webm">
    {% endif %}
    <p>To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video</p>
</video>
